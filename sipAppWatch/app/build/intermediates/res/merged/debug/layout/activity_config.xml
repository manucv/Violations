<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/lblLegal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:padding="5dp"
            android:text="MAC Impresora:"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/txtPrinterMAC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:padding="5dp"
            android:background="@drawable/text_bkg"
            android:ems="10"
            android:text="00:19:0E:A1:">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="34dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_bkg"
            android:onClick="onPrintClick"
            android:padding="5dp"
            android:text="Probar ImpresiÃ³n"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:weightSum="1.0"
        android:padding="5dp">
        <TextView
            android:id="@+id/lblActualizar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:padding="5dp"
            android:text="Actualizar Base de Datos:"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/actualizar_db"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight=".40"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_bkg"
            android:onClick="onUpdateClick"
            android:padding="5dp"
            android:text="Actualizar Base"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="34dp"
            android:background="@drawable/button_bkg"
            android:onClick="onSaveClick"
            android:text="Guardar"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
