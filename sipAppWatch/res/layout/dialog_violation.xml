<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:padding="5dp" >

        <Spinner
            android:id="@+id/SpnContravencion"
            style="@style/AppBaseTheme"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/spinner_bkg"
            android:entries="@array/violations"
            android:fitsSystemWindows="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:padding="5dp" >

        <Button
            android:id="@+id/BtnCamara"
            android:layout_width="0px"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/camera_bkg"
            android:fitsSystemWindows="true"
            android:onClick="onBtnCamaraClick"
            android:text="Detectar Placa"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/TxtPlateNumber"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Placa" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.95"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/ImgPlate"
            android:layout_width="0px"
            android:layout_height="125dp"
            android:layout_gravity="left"
            android:layout_weight="0.94"
            android:src="@drawable/abc_list_focused_holo" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TxtInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Espacio: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/LblPar_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitud: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/LblLatitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitud: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/LblLongitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/LblHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/LblCaptura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>