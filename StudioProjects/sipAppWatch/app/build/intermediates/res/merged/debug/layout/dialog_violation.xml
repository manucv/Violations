<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.95" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:weightSum="1.0"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/TxtInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Espacio: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/LblPar_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha y Hora:"
                    android:textStyle="bold"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/LblHora"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95"
                android:padding="5dp"
                android:weightSum="1.0" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Placa:" 
                    android:textStyle="bold" />



                <EditText
                    android:id="@+id/TxtPlateNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:ems="10"
                    android:hint="Placa"
                    android:lines="1"
                    android:maxLines="1"
                    android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:maxLength="7"
                    >
                    <requestFocus />
                </EditText>
                
                <Button
                    android:id="@+id/BtnCamara"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/camera_bkg"
                    android:fitsSystemWindows="true"
                    android:onClick="onBtnCamaraClick"
                    android:text="Leer Placa"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95"
                android:padding="5dp"
                android:weightSum="1.0" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="ContravenciÃ³n:"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/SpnContravencion"
                    style="@style/AppBaseTheme"
                    android:layout_width="0dp"
                    android:layout_height="37dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/spinner_bkg"
                    android:fitsSystemWindows="true" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.95" >
            </ScrollView>

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.95"
                android:weightSum="1.0" >

                <ImageView
                    android:id="@+id/ImgProof1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:onClick="onProofClick"
                    android:src="@drawable/picture_ico" />

                <ImageView
                    android:id="@+id/ImgProof2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:onClick="onProofClick"
                    android:src="@drawable/picture_ico" />

                <ImageView
                    android:id="@+id/ImgProof3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:onClick="onProofClick"
                    android:src="@drawable/picture_ico" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/lmponceb/Desktop/StudioProjects/sipAppWatch/app/src/main/res/layout/dialog_violation.xml -->