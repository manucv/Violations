<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="0dp"
    android:textAlignment="gravity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:id="@+id/linearLayout"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/LblSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:padding="10dp"
                android:text="Saldo Total"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="$0.00"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:visibility="gone"
                />

            <ProgressBar
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:id="@+id/loadingInfo"
                android:layout_margin="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:weightSum="6"
            android:layout_below="@+id/linearLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/LblSMS"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Parqueadero:"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/TxtPar_id"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bkg"
                        android:digits="@string/formatAlphaNumeric"
                        android:fitsSystemWindows="true"
                        android:hint="Ingrese numero de spot"
                        android:inputType="textCapCharacters"
                        android:lines="1"
                        android:maxLength="5"
                        android:maxLines="1"
                        android:padding="5dip"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/LblFalta"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="No. Placa:"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/TxtAut_placa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bkg"
                        android:digits="@string/formatAlphaNumeric"
                        android:fitsSystemWindows="true"
                        android:hint="Ingrese la placa"
                        android:inputType="textCapCharacters"
                        android:lines="1"
                        android:maxLength="7"
                        android:maxLines="1"
                        android:padding="5dip"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tiempo:"
                        android:textColor="@android:color/white" />

                    <Spinner
                        android:id="@+id/SpnLog_par_horas_parqueo"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/spinner_bkg"
                        android:entries="@array/tiempo_parqueadero"
                        android:fitsSystemWindows="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
               >

                <fragment
                    android:id="@+id/mapParking"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ImgAmex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/valor_background" />

                <TextView
                    android:id="@+id/LblTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="41dp"
                    android:scaleType="centerInside"
                    android:text="0.00 Ctvos"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <ImageButton
                    android:id="@+id/BtnComprarParqueadero"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/btn_pagar"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                     />
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loadingParking"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />        
        
    </RelativeLayout>

</FrameLayout><!-- From: file:/C:/Users/Camilo/StudioProjects/sipApp_project1/app/src/main/res/layout/activity_parking.xml -->